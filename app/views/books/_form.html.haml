= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, :required => true
  .field
    = f.label :author
    = f.text_field :author, :required => true
  .field
    = f.label :isbn
    = f.text_field :isbn, :required => true
  .actions
    = f.submit 'Save', :class => 'btn'
